---
const pageTitle = "MKOUSSA |";
import '../styles/global.css';
---
<html lang="en">
    <head>
        <title>{pageTitle} Blorp</title>
        <style>
            .slider:hover {
                opacity: 1;
            }

            .slidecontainer {
                width: 100%;
            }
            
            .slider {
                -webkit-appearance: none;
                width: 100px;
                height: 25px;
                background: #c58662;
                opacity: 0.7;
                -webkit-transition: .2s;
                transition: opacity .2s;
                transform: rotate(-75deg);
                cursor: crosshair;
            }
                  
            .slider::-webkit-slider-thumb {
                -webkit-appearance: none;
                appearance: none;
                width: 25px;
                height: 25px;
                background: #c6cac1;
                cursor: crosshair;
            }
            
            .slider::-moz-range-thumb {
                width: 10px;
                height: 24px;
                background: #c6cac1;
                cursor: crosshair;
            }

            .medSlider:hover {
                opacity: 1;
            }

            .medSlider {
            -webkit-appearance: none;
            width: 100px;
            height: 25px;
            background: #698d70;
            opacity: 0.7;
            -webkit-transition: .2s;
            transition: opacity .2s;
            transform: rotate(-100deg);
            cursor: crosshair;
            }
            
            .medSlider::-webkit-slider-thumb {
            -webkit-appearance: none;
            appearance: none;
            width: 25px;
            height: 25px;
            background: #c6cac1;
            cursor: crosshair;
            }
            
            .medSlider::-moz-range-thumb {
            width: 10px;
            height: 24px;
            background: #c6cac1;
            cursor: crosshair;
            }

            .smallLeftLabels{
                -webkit-transform: rotate(-75deg);
                color: #c6cac1;
            } 

            .smallLeftLabels:hover{
            background-color: #014d3b;
            cursor: none;
            } 

            .smallRightLabels{
            -webkit-transform: rotate(80deg);
            color: #c58662;
            } 

            .smallRightLabels:hover{
            background-color: #014d3b;
            cursor: none;
            } 

            .keyboard:hover {
            background-color: aqua;
            }
        </style>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/0.5.14/p5.js" type="text/javascript"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/0.7.3/addons/p5.sound.js" type="text/javascript"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/0.7.3/addons/p5.dom.js" type="text/javascript"></script>
        <script
            src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
            integrity="sha256-3edrmyuQ0w65f8gfBsqowzjJe2iM6n0nKciPUp8y+7E="
            crossorigin="anonymous"></script>
        <script is:inline src="../Blorp/sketch.js"></script>
        <script is:inline src="../Blorp/oscillator.js"></script>
        <script is:inline src="../Blorp/displayLabels.js"></script>
        <script is:inline src="../Blorp/slider.js"></script>
        <script is:inline src="../Blorp/keyboard.js"></script>
    </head>
